<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contactus1"
    android:background="@drawable/baground"
    tools:context=".ui.contactus.contactus">

    <androidx.cardview.widget.CardView
        android:id="@+id/deuxieme_dose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="16dp"
        android:elevation="8dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:text="Contact us for more information"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@id/phone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_margin="16dp"
                android:layout_toRightOf="@id/img_tel"
                android:text="+(216) 21061748"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/img_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt1"
                android:layout_margin="16dp"
                android:src="@drawable/ic_baseline_contacts_24">

            </ImageView>


            <ImageView
                android:id="@+id/img_earth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_tel"
                android:layout_margin="16dp"
                android:src="@drawable/ic_baseline_language_24">

            </ImageView>

            <TextView
                android:id="@+id/earth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone1"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/img_earth"
                android:text="www.hotel.com"
                android:textStyle="bold"></TextView>


            <ImageView
                android:id="@+id/img_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_earth"
                android:layout_margin="16dp"
                android:src="@drawable/ic_baseline_drafts_24">

            </ImageView>

            <TextView
                android:id="@+id/sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/earth"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"

                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toRightOf="@id/img_sms"
                android:text="hotel@gmail.com"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sms"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="For your reclamation"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"></TextView>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="262dp"
                android:ems="10"
                android:hint="  your mail"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/editTextTextMultiLine"

                android:hint="  message"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_below="@+id/text2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="26dp"
                android:background="@drawable/texte2_drawable"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/buttonsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextTextMultiLine"
                android:background="@drawable/bot_drawable"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="117dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="123dp"
                android:text="Send"

                />

            <EditText
                android:id="@+id/objettxt"
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="322dp"
                android:ems="10"
                android:inputType=""
                android:hint="objet" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>